<resources>

    <style name="Theme.Weather" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <item name="colorPrimaryDark">@color/body_background</item>
        <item name="android:textColorPrimary">@color/body_active_font_color</item>
        <item name="android:windowBackground">@color/body_background</item>
        <item name="android:actionMenuTextColor">@color/bottom_navigation_selected</item>
        <item name="actionMenuTextColor">@color/bottom_navigation_selected</item>

        <item name="android:textViewStyle">@style/Weather.TextView.Small</item>
        <item name="toolbarStyle">@style/Weather.Toolbar</item>
    </style>

    <!-- Toolbar -->
    <style name="Weather.Toolbar" parent="Widget.AppCompat.Toolbar">
        <item name="android:background">@color/toolbar_color</item>
        <item name="android:textSize">@dimen/text_size_x_large</item>
    </style>

    <!-- AppCompatTextView -->
    <style name="Weather.TextView.XX.Large" parent="Weather.TextView.Small">
        <item name="android:textSize">@dimen/text_size_xx_large</item>
    </style>

    <style name="Weather.TextView.X.Large" parent="Weather.TextView.Small">
        <item name="android:textSize">@dimen/text_size_x_large</item>
    </style>

    <style name="Weather.TextView.Large" parent="Weather.TextView.Small">
        <item name="android:textSize">@dimen/text_size_large</item>
    </style>

    <style name="Weather.TextView.Medium" parent="Weather.TextView.Small">
        <item name="android:textSize">@dimen/text_size_medium</item>
    </style>

    <style name="Weather.TextView.Small" parent="Widget.AppCompat.TextView">
        <item name="android:textColor">@color/body_active_font_color</item>
        <item name="android:textSize">@dimen/text_size_small</item>
        <item name="fontFamily">sans-serif</item>
    </style>

    <style name="Weather.TextView.X.Small" parent="Weather.TextView.Small">
        <item name="android:textSize">@dimen/text_size_x_small</item>
    </style>
</resources>